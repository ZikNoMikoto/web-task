Vagrant.configure("2") do |config|
    config.vm.box = "generic/rocky9"
  
    config.vm.network "forwarded_port", guest: 80, host: 8080 # проброс 80 порта 
    config.vm.network "private_network", type: "dhcp" # конфигурация сети
    config.vm.provider "virtualbox" do |vb|
      vb.memory = "1024"
      vb.cpus = 1
    end
  
  
    config.vm.provision "ansible" do |ansible|
      ansible.playbook = "ansible/playbook.yml" # запуск плейбука 
      ansible.extra_vars = {
        ansible_python_interpreter: "/usr/bin/python3" # интерпретатор используемый ансиблом 
      }
    end
  end